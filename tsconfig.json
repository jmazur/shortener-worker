{
  "compilerOptions": {
    "target": "esnext",
    "outDir": "dist",
    "lib": ["esnext"],
    "module": "commonjs",
    "types": ["@cloudflare/workers-types", "@types/jest"],
    "moduleResolution": "node",
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src/**/*", "bindings.d.ts"]
}
